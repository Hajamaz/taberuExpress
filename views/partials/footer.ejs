    <script>
        const mapToken = `<%- process.env.TOKEN %>`;
        // Function to initialize Mapbox map
        function initMapbox() {
            mapboxgl.accessToken = 'mapToken';
            const map = new mapboxgl.Map({
                container: 'map', // container ID
                center: [-1.2391, 51.7483], // starting position [lng, lat]
                zoom: 15 // starting zoom
            });
            const marker = new mapboxgl.Marker()
                .setLngLat([-1.2391, 51.7483])
                .addTo(map)
                .setPopup(new mapboxgl.Popup().setHTML("<p>Taberu restaurant <br> 100 Cowley road</p>"));
        }

        document.addEventListener('DOMContentLoaded', function () {
            // Call the initMapbox function after the DOM is loaded
            initMapbox();
        });
